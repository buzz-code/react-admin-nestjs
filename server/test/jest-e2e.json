{
  "moduleFileExtensions": ["js", "json", "ts", "tsx", "jsx"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "forceExit": true,
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^@shared/(.*)$": "<rootDir>/shared/$1"
  },
  "setupFiles": ["<rootDir>/test/setup-e2e.ts"]
}
